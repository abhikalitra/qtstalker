enable=1
plugin=CUS
tabRow=1
dateFlag=1
Name=Relative Candles with MAs
script=candles := BARS(Candle,dimgray)|close-0 := UTIL(REF, Close, 0)|close-1 := UTIL(REF, Close, 1)|relUp := UTIL(COMP, close-0, close-1, GT)|tUp := UTIL(COLOR, relUp, candles, 1, green)|relDown := UTIL(COMP, close-0, close-1, LT)|tDown := UTIL(COLOR, relDown, candles, 1, red)|relEq := UTIL(COMP, close-0, close-1, EQ)|tEq := UTIL(COLOR, relEq, candles, 1, blue)|SMA20 := TALIB(SMA,close-0,20)|SMA40 := TALIB(SMA,close-0,40)|SMA60 := TALIB(SMA,close-0,60)|plot (SMA20,#ff0000,SMA20,Line)|plot (SMA40,#00ffff,SMA40,Line)|plot (SMA60,#ff00ff,SMA60,Line)|plot (candles,dimgray,c-rel-ma,Candle)
logScale=1
