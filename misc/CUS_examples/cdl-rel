enable=1
plugin=CUS
tabRow=1
dateFlag=1
Name=Relative Candles
script=candles := BARS(Candle)|close-0 := UTIL(REF, Close, 0)|close-1 := UTIL(REF, Close, 1)|relDown := UTIL(COMP, close-0, close-1, LT)|t1 := UTIL(COLOR, relDown, candles, 1, red)|relEq := UTIL(COMP, close-0, close-1, EQ)|t2 := UTIL(COLOR, relEq, candles, 1, blue)|plot (candles,#ff0000,Candles,Candle)
logScale=0
